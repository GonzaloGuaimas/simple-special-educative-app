<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Matematicas.SumaDeNumeros">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="center"
            android:text="Suma de Numeros"
            android:textColor="#ffff"
            android:textSize="35dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCalcular"
            android:layout_weight="2.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="center"
            android:elevation="10dp"
            app:cardMaxElevation="30dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/bubblegum_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="revisar"
                android:textColor="#000000"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTerminarActividad"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="center"
            app:cardBackgroundColor="#CD3636"
            android:elevation="10dp"
            app:cardMaxElevation="30dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/bubblegum_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminar"
                android:textColor="#FFFFFF"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bubblegum_sans"
                android:gravity="center"
                android:text="por: Lic. Gisela"
                android:textColor="#000000"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg5"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/techo" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:text="C"
                                            android:textColor="#000000"
                                            android:textSize="30dp" />
                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/cent1"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/cent2"
                                            android:layout_width="87dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="5dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:text="D"
                                            android:textColor="#000000"
                                            android:textSize="30dp" />

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/dec1"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/dec2"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="5dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:text="U"
                                            android:textColor="#000000"
                                            android:textSize="30dp" />

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/uni1"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/uni2"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="#000000" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/centResult"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="5dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/decResult"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="5dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <Spinner
                                            android:layout_gravity="center"
                                            android:id="@+id/uniResult"
                                            android:layout_width="90dp"
                                            android:layout_height="70dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/bubblegum_sans"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/base" />
                            </LinearLayout>


                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="#DD20A7" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/techo" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerSumando1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="#000000" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerSumando2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="#000000" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerSumando3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/base" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:id="@+id/textProblema"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7.1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/bubblegum_sans"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ffff"
                        android:textSize="20dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.1"
                    android:background="@drawable/bg4"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerMultibase"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imagenOperando"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="280dp"
            android:clickable="true"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>